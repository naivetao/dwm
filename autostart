#!/bin/sh
_thisdir=$(cd $(dirname $0); pwd)

check() {
  apps=('dunst' 'feh' 'picom' 'fcitx5' 'st' 'tmux' 'xbanish' 'lf')
  files=("$HOME/.Xmodmap" "$wallpaper")
  for i in ${apps[*]} ${files[*]}
  do
    if ls '/bin/'$i &>/dev/null || ls $i &>/dev/null || ls '/usr/local/bin/'$i &>/dev/null
    then
      echo &>/dev/null
    else
      exit
    fi
  done
}

statusbar() {
  xsetroot -name "$(date '+%Y-%m-%d %H:%M') Disk:$(lsblk -f | awk '/ext4/ {print $5}') Wifi:$(hostname -i)"
}

cron() {
  i=0
  while true
  do
    [ $((i % 2)) -eq 0 ] && statusbar
    sleep 2; i=$((i + 2))
  done
}

startup() {
	[ $1 ] && sleep $1
  feh --randomize --bg-fill $wallpapers/*.png
	st -e tmux &
}

daemons() {
	[ $1 ] && sleep $1
	xbanish -m ne &
	dunst &
	fcitx5 -d 2> /dev/null &
	lf -server &
  picom -b
}

check
cron &
startup &
daemons &
